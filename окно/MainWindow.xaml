<Window x:Class="окно.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:окно"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="90"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="20" Grid.Row="1">
            <TextBlock Text="введите логин"/>
            <Label Content="Логин"/>
            <TextBox x:Name="tbLogin" Margin="0,0,0,10" Width="200"/>
            <TextBlock Text="введите пароль"/>
            <Label Content="пароль"/>
            <PasswordBox x:Name="pbPassword" Margin="0,0,0,10" Width="200"/>
            <Button Content="Войти" Margin="0,10,0,0" FontSize="30" Background="PaleVioletRed" Click="Button_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
